class Solution {
    public boolean check(int[] nums) {
     int count = 0; 
        //sorted or not
        for (int i = 1; i < nums.length; i++) {
            if (nums[i - 1] > nums[i]) {
                count += 1;

                if (count > 1) {
                    return false; 
                }
            }
        }

        //roated or not
        if (count == 1 && nums[nums.length - 1] > nums[0]) {
            return false;
        }

        return true;
    }
}
        
    
